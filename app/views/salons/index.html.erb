<main class="wrapper">
  <div class="container mt-4">
    <div class="search">
        <%= form_tag salons_search_path, id: "search-form", method: :post, remote: true do %>
         <%= text_field_tag :country, params[:country], placeholder: 'Country'%> 
         <%= text_field_tag :location, params[:location], placeholder: 'City'%> 
         <%= text_field_tag :suburb, params[:suburb], placeholder: 'Area'%> 
         <%= submit_tag "Search", name: nil, class:"btn btn-primary" %>
        <% end %>
    </div>
  </div>
  <div class="container mt-3" id ="search_list" >
    <%= render partial: '/salons/display', object: @salons %>
  </div>
</main>