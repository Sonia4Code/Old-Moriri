<% @listings.in_groups_of(2,false).each do|group| %> 
  <div class="row">
    <%group.each do|listing|%>
      <div class="card  w-50" style = " padding: 2%">
        <div class="card-body" >
          <h5 class="card-title"><strong> Stylist: </strong><%= listing.user.first_name %> <%= listing.user.last_name %></h5>
          <p class= "card-text"> <strong> Country: </strong><%= link_to listing.title ,listing_path(listing) %></p>   
          <p class= "card-text"> <strong> Country: </strong><%= listing.country %></p>   
          <p class= "card-text"> <strong> Location: </strong> <%= listing.location %></p>   
         </div>
      </div>
    <%end%>    
  </div>
<%end%>


