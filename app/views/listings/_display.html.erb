<% @listings.in_groups_of(2,false).each do|group| %> 
  <div class="row">
    <%group.each do|listing|%>
      <div class="card  w-50" style = " padding: 2%">
        <div>
            <h1><%= link_to listing.business_name, listing_path(listing) %></h1>
            <p>Country: <%= listing.country %></p>
            <p>Location: <%= listing.location %> </p>
            <p>Owner: <%= listing.user.first_name%> <%= listing.user.last_name%></p>
            <p>Contact: <%= listing.contact %></p>
            <p>Speciality: <%= listing.speciality * "," %></p>
        </div>
      </div>
    <%end%>    
  </div>
<%end%>

