<!DOCTYPE html>
<html>
  <head>
    <title>Moriri</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css' %>

  </head>

  <body>
    
    <nav>
      <div>
      <ul class="nav navbar-nav float-left">
        <li><strong><%= link_to "Moriri", '/' %></strong>|<br></li> 
      </ul>
        <% if current_user %>
      <ul class="nav navbar-nav float-right">      
        <li class="nav-item">      
            <strong>Signed in as <%= current_user.first_name %></strong>
        </li>
      </ul>
      <ul class="nav navbar-nav float-left">      
        <li class="nav-item">      
            <%= link_to "Log Out", '/logout' %> |
            <%= link_to "Listings", '/listings' %> |
            <%= link_to "New", '/listings/new' %>  |
            <%= link_to 'Back', :back %>

            <% else %>
            <%= link_to 'Log In', '/login' %> | <%= link_to 'Sign Up', '/signup' %> |
            <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %>
          <% end %>
        </li>
      </ul>
      </div>
    </nav>
    <br>
    
 <div id="flash">
    <% flash.each do |key, value| -%>
      <% if key == "success"%>
        <div id="flash_<%= key %>" class="alert alert-success" role="alert"><%=h value %></div>
      <% else %>
        <div id="flash_<%= key %>" class="alert alert-danger" role="alert"><%=h value %></div>
      <% end %>
    <% end %>
  </div>




      <%= yield %>
  </body>
</html>
